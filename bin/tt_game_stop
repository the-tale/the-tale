#!/bin/bash

set -e

trap 'echo "\"${last_command}\" command failed with exit code $?."' ERR

./bin/docker_compose.sh --profile workers stop `./bin/docker_compose.sh ps --services | grep "^worker-"`

./bin/docker_compose.sh --profile utils stop `./bin/docker_compose.sh ps --services | grep "^site$"`

./bin/docker_compose.sh --profile services stop `./bin/docker_compose.sh ps --services | grep "^tt-"`
